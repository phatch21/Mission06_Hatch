@{
    ViewData["Title"] = "Movie Table";
}
@model IEnumerable<Mission06_Hatch.Models.Movie>

<h2>Movie Collection</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Director</th>
            <th>Year</th>
            <th>Category</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>Lent To</th>
            <th>Copied to Plex</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Director</td>
                <td>@movie.Year</td>
                <td>@movie.CategoryId</td> <!-- Replace with category names if available -->
                <td>@movie.Rating</td>
                <td>@(movie.EditedBool ? "Yes" : "No")</td>
                
                <td>@movie.LentTo</td>
                <td>@(movie.CopiedToPlexBool ? "Yes" : "No")</td>
                <td>@movie.Notes</td>
            </tr>
        }
    </tbody>
</table>
