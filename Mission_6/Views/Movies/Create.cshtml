@model Mission06_Hatch.Models.Movie

@{
    ViewData["Title"] = "Add a New Movie";
}

<h2>Add a New Movie</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="Create" method="post">
    <div>
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" class="form-control" required />
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" type="number" class="form-control" required />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Genre">Genre:</label>
        <input asp-for="Genre" class="form-control" required />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating" class="form-control">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Edited">Edited:</label>
        <input type="checkbox" asp-for="Edited" value="true" checked="@(Model?.Edited ?? false)" />
    </div>

    <div>
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" class="form-control" />
    </div>

    <div>
        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" class="form-control" maxlength="25" />
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Add Movie</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
